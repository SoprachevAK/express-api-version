{
  "name": "express-api-version",
  "version": "0.0.1",
  "description": "Express middleware for API versioning",
  "main": "./lib/index.js",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "clean": "rm -rf ./lib/",
    "semantic-release": "semantic-release",
    "test:watch": "jest --watchAll",
    "test": "jest --coverage",
    "typecheck": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SoprachevAK/express-api-version.git"
  },
  "license": "MIT",
  "author": {
    "name": "Soprachev Andrei",
    "email": "soprachev@mail.ru",
    "url": "https://github.com/SoprachevAK"
  },
  "engines": {
    "node": ">=12.0"
  },
  "keywords": [
    "express",
    "API",
    "versioning",
    "middleware",
    "semver"
  ],
  "bugs": {
    "url": "https://github.com/SoprachevAK/express-api-version/issues"
  },
  "homepage": "https://github.com/SoprachevAK/express-api-version#readme",
  "devDependencies": {
    "@ryansonshine/commitizen": "^4.2.8",
    "@ryansonshine/cz-conventional-changelog": "^3.3.4",
    "@types/express": "^4.17.16",
    "@types/jest": "^27.5.2",
    "@types/node": "^12.20.11",
    "@types/semver": "^7.3.13",
    "conventional-changelog-conventionalcommits": "^5.0.0",
    "jest": "^27.2.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "semantic-release": "^19.0.2",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "typescript": "^4.9.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@ryansonshine/cz-conventional-changelog"
    }
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits",
          "releaseRules": [
            {
              "type": "build",
              "scope": "deps",
              "release": "patch"
            }
          ]
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits",
          "presetConfig": {
            "types": [
              {
                "type": "feat",
                "section": "Features"
              },
              {
                "type": "fix",
                "section": "Bug Fixes"
              },
              {
                "type": "build",
                "section": "Dependencies and Other Build Updates",
                "hidden": false
              }
            ]
          }
        }
      ],
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  },
  "dependencies": {
    "semver": "^7.3.8"
  }
}
